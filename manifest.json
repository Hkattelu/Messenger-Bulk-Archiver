 {
    "name": "Messenger Bulk Archiver",
    "version": "1.0",
    "description": "An extension that makes it easy to bulk archive chats on Facebook Messenger",
    "permissions": ["declarativeContent", "activeTab", "storage"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "page_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "manifest_version": 2
  }
