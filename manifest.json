 {
    "name": "Messenger Bulk Archiver",
    "version": "1.0",
    "description": "An extension that makes it easy to bulk archive chats on Facebook Messenger",
    "permissions": ["declarativeContent", "activeTab"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "page_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16_main.png",
        "32": "images/icon32_main.png",
        "48": "images/icon48_main.png",
        "128": "images/icon128_main.png"
      }
    },
    "icons": {
      "16": "images/icon16_main.png",
      "32": "images/icon32_main.png",
      "48": "images/icon48_main.png",
      "128": "images/icon128_main.png"
    },
    "manifest_version": 2
  }
